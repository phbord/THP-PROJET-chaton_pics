] %>
<%= render :partial => "shared/main_carousel", :object => @imgArr %>


<!-- CONTENT -->
<div class="container mb-5">
  <div class="row">
    <% @kittens.each do |kitten| %> 
      <% @kitten = kitten %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <%= render :partial => "kitten_card", :object => @kitten %>
      </div>
    <% end %>
  </div>
</div>


