<div class="modal fade" id="kittenPictureModal" tabindex="-1" aria-labelledby="kittenPictureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="kittenPictureModalLabel"><%= @kitten.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img src="<%= @kitten.image_url %>" class="w-100 kitten-img" alt="">
            </div>
        </div>
    </div>
</div>