<div class="container d-flex flex-column align-items-center mb-5">
  <h1 class="mt-5">Change ton mot de passe</h1>
  <div class="mw-form">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group mt-3">
      <%= f.label :password, "Nouveau mot de passe" %><br />
      <% if @minimum_password_length %>
        <small><em>(<%= @minimum_password_length %> caract√®res minimum)</em></small><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :password_confirmation, "Confirme ton nouveau mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mt-3 mb-3">
      <%= f.submit "Enregistrer", class: "btn btn-success" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

