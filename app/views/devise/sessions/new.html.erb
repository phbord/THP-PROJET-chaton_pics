<div class="container d-flex flex-column align-items-center mb-5">
  <h1 class="mt-5">Se connecter</h1>
  <div class="mw-form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group mt-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password, class: "form-label"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

      <div class="form-group mt-3 mb-3">
        <%= f.submit "Enregistrer", class: "btn btn-success"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
