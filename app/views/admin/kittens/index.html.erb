<div class="container my-5">
    <h1 class="mt-5">Dashboard</h1>

    <!-- KITTEN LIST -->
    <div class="mt-3">
        <h2 class="d-flex justify-content-between align-items-center">
            <span>Liste des fiches chattons</span>
            <%= link_to "CrÃ©ation", 
                        new_admin_kitten_path, 
                        class: "btn btn-secondary btn-sm ms-1 my-1" %>
        </h2>
        <ul class="mt-3">
            <% @kittens.each do |kitten| %>
                <% @kitten = kitten %>
                <%= render :partial => "kitten_item", :object => @kitten %>
            <% end %>
        </ul>
    </div>

    <!-- COMMAND LIST -->
    <div class="mt-5">
        <h2>Liste des commandes</h2>
        <ul class="mt-3">
            <li class="border-bottom border-light pt-1 pb-3">
                <div class="row align-items-center">
                    <div class="col-12 col-sm-3 text-center"><strong>ID commande</strong></div>
                    <div class="col-12 col-sm-3 text-center"><strong>Email</strong></div>
                    <div class="col-12 col-sm-6 text-center"><strong>Photos</strong></div>
                </div>
            </li>
            <% @charges.each do |charge| %>
                <% @charge = charge %>
                <%= render :partial => "charge_item", :object => @charge %>
            <% end %>
        </ul>
    </div>
</div>
