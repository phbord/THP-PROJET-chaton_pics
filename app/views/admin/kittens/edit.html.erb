<div class="container d-flex flex-column align-items-center my-5">
    <h1>Editer un enregistrement</h1>
    <div class="mw-form">
        <%= form_tag(admin_kitten_path, method: "put", id: "contact-form", multipart: true )  do %>
            <%if @kitten.picture.attached?%>
                <%= image_tag @kitten.picture, alt: 'photo', class: 'card-img-top' %>
            <%else%>
                <p>Il n'y a pas encore d'images lié à ce chaton</p>
            <%end%>
            <div class="form-group mt-3">
                <%= file_field_tag :picture, class: "form-control" %>
            </div>
            <div class="form-group mt-3">
                <%= label_tag "Name" %>
                <%= text_field_tag :name, @kitten.name, class: "form-control" %>
            </div>
            <div class="form-group mt-3">
                <%= label_tag "Description" %>
                <%= text_area_tag :description, @kitten.description, class: "form-control" %>
            </div>
            <div class="form-group mt-3">
                <%= label_tag "Price" %>
                <%= number_field_tag :price, @kitten.price, class: "form-control" %>
            </div>
            <div class="form-group mt-4">
                <%= submit_tag "Enregistrer", class: "btn btn-primary me-1" %>
                <%= link_to "Accueil", root_path, class: "btn btn-secondary" %>
            </div>
        <%end%>
    </div>
</div>